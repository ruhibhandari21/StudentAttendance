<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@color/colorLightGrayBg"
    android:padding="10dp"
    >

    <LinearLayout
        android:weightSum="2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel_add_student"
            android:background="@drawable/tiles_bg"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_stud"
              android:id="@+id/img1"
                android:layout_margin="10dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:layout_below="@+id/img1"
                android:src="@drawable/ic_stud"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="@color/colorLightBlack"
                android:text="Add Student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rel_add_teacher"
            android:background="@drawable/tiles_bg"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/ic_teacher"
                android:id="@+id/img2"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:layout_below="@+id/img2"
                android:src="@drawable/ic_stud"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="@color/colorLightBlack"
                android:text="Add Teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel_add_class"
            android:background="@drawable/tiles_bg"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/ic_add_class"
                android:id="@+id/img3"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:layout_below="@+id/img3"
                android:src="@drawable/ic_stud"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="@color/colorLightBlack"
                android:text="Add Class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_add_subject"
            android:background="@drawable/tiles_bg"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/ic_add_subjects"
                android:id="@+id/img4"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:layout_below="@+id/img4"
                android:src="@drawable/ic_stud"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="@color/colorLightBlack"
                android:text="Add Subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
