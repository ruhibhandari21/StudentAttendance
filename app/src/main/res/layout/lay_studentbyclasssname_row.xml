<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    >

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/tv_class_code"
        android:layout_toLeftOf="@+id/chk_present"
        android:layout_alignParentLeft="true"
        android:textSize="16sp"
        android:gravity="center|left"
        android:textColor="@color/colorLightBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <CheckBox
        android:id="@+id/chk_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/chk_absent"
        android:layout_marginRight="10dp"
        android:background="@android:color/holo_green_dark"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
       />


    <CheckBox
        android:layout_centerInParent="true"
        android:id="@+id/chk_absent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />


    <View
        android:layout_below="@+id/tv_class_code"
        android:layout_marginTop="20dp"
        android:background="@color/colorLightGrayBg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>


</RelativeLayout>